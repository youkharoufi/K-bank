{% extends "layout.twig" %}

{% block body %}

{% if errorForm %}

{% for error in errorForm %}
{% if error.username %}
  <div class="alert alert-danger" id="alert-danger">{{error.username.message}}</div>
{% endif %}
{% if error.firstname %}
  <div class="alert alert-danger" id="alert-danger">{{error.firstname.message}}</div>
{% endif %}
{% if error.lastname %}
  <div class="alert alert-danger" id="alert-danger">{{error.lastname.message}}</div>
{% endif %}
{% if error.email %}
  <div class="alert alert-danger" id="alert-danger">{{error.email.message}}</div>
{% endif %}
{% if error.password %}
  <div class="alert alert-danger" id="alert-danger">{{error.password.message}}</div>
{% endif %}
{% if error.passwordConfirm %}
  <div class="alert alert-danger" id="alert-danger">{{error.passwordConfirm.message}}</div>
{% endif %}

    {% endfor %}
    {% endif %}
    



<h1>Register</h1>

<p> Auriez-vous deja un compte ?<a href="/users/login"> Clickez ici pour login</a></p>

<form action="/users/signup" method="POST">
    
    <div class="form-group">
    <label for="username">username :</label>
    <input type="text" name="username" id="username" class="form-control">
    </div>

    <div class="form-group">
    <label for="firstname">firstname :</label>
    <input type="text" name="firstname" id="firstname" class="form-control">
    </div>

    <div class="form-group">
    <label for="lastname">lastname :</label>
    <input type="text" name="lastname" id="lastname" class="form-control">
    </div>

    <div class="form-group">
    <label for="email">email :</label>
    <input type="email" name="email" id="email" class="form-control">
    </div>

    <div class="form-group">
    <label for="password">password :</label>
    <input type="password" name="password" id="password" class="form-control">
    </div>

    <div class="form-group">
    <label for="password-confirm">Repeat password :</label>
    <input type="password" name="passwordConfirm" id="password-confirm" class="form-control">
    </div>

    <button type="submit" class="btn btn-success mt-3">sign up</button>
</form>

{% endblock body %}