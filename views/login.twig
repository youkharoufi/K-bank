{% extends "layout.twig" %}

{% block body %}
    <h1> Login </h1>
    {% if errorForm %}

{% for error in errorForm %}
{% if error.username %}
  <div class="alert alert-danger" id="alert-danger">{{error.username.message}}</div>
{% endif %}
{% if error.password %}
  <div class="alert alert-danger" id="alert-danger">{{error.password.message}}</div>
{% endif %}

    {% endfor %}
    {% endif %}
    

    <form action="/users/login" method="POST">

    <p>Auriez-vous oublie votre mot de passe ? Clickez <a href="/users/forgot-password"> Ici !</a></p>
        
        <div class="form-group">
            <label for="username">username : </label>
            <input type="text" id="username"  name="username" class="form-control">
        </div>

        <div class="form-group">
            <label for="password">password : </label>
            <input type="password" id="password" name="password" class="form-control">
        </div>


        <button type="submit" class="btn btn-success mt-3">login</button>

{% endblock body %}